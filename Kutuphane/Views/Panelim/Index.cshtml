@model Kutuphane.Models.Entity.Uyeler

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>

@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{
<table class="table table-hover" style="margin-top:30px">

    <tr>
        <td>
            <label style="font-weight:bolder"> Mail Adresi: </label> @HttpContext.Current.User.Identity.Name
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>   @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>   @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>   @Html.TextBoxFor(x => x.Fotograf, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>   @Html.TextBoxFor(x => x.Okul, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-warning">Güncelle</button>
        </td>
    </tr>
</table>
}