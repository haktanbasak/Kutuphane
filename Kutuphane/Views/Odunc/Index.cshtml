@using Kutuphane.Models.Entity
@model List<Hareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Kitap1.Ad</td>
            <td>@item.Uyeler.Ad @item.Uyeler.Soyad</td>
            <td>@item.Personel1.Personel1</td>
            <td>@Convert.ToDateTime(@item.AlisTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(@item.İadeTarih).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/OduncIade/@item.Id" class="btn btn-default" style="background-color:#64d8ca; color:white">Kitabı İade Al</a></td>
        </tr>
    }
</table>
