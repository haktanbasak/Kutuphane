@model Kutuphane.Models.Entity.Hareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye ID</label>
        @*@Html.TextBoxFor(x => x.Uye, new { @class = "form-control" })*@
        @Html.DropDownListFor(x=>x.Uyeler.Id,(List<SelectListItem>)ViewBag.dgr1, "Uye Seçiniz",new { @class = "form-control"})
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @*@Html.TextBoxFor(x => x.Kitap, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.Kitap1.Id, (List<SelectListItem>)ViewBag.dgr2,"Kitap Seçiniz", new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @*@Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.Personel1.Id, (List<SelectListItem>)ViewBag.dgr3,"Personel Seçiniz", new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="AlisTarih" value="@DateTime.Now.ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IadeTarih" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#a330b5; color:white">Kitabı Ödünç Ver </button>
        <input type="hidden" value="False" name="IslemDurum"/>
    </div>
</form>
