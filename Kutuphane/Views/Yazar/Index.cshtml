@using Kutuphane.Models.Entity
@model List<Yazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <tr style="background-color: rgb(252,178,22)">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var item in Model)
    {
       <tr>
           <td>@item.Id</td>
           <td>@item.Ad</td>
           <td>@item.Soyad</td>
           <td>@Html.ActionLink("Sil","YazarSil",new {id=item.Id },new {@class="btn btn-danger", onclick="return confirm('Silmek İstiyor Musunuz ?')" })</td>
           <td><a href="/Yazar/YazarGetir/@item.Id" class="btn btn-warning">Güncelle</a></td>
           <td><a href="/Yazar/YazarKitaplar/@item.Id" class="btn btn-success" style="background-color:lightsalmon; color:white">Yazarın Kitapları</a></td>
       </tr>
    }
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>
