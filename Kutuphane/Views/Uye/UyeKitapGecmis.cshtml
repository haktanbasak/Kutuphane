@using Kutuphane.Models.Entity
@model List<Hareket>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye: @ViewBag.uyeAd</h2>
<br />
<table class="table table-danger">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Kitap1.Ad</td>
                    <td>@item.Personel1.Personel1</td>
                    <td>@(Convert.ToDateTime(item.AlisTarih).ToString("dd/MM/yyyy"))</td>
                    <td>@(Convert.ToDateTime(item.IadeTarih).ToString("dd/MM/yyyy"))</td>
                </tr>
            }
</table>

